{
	"compilerOptions": {
		"importHelpers": false,

		"esModuleInterop": true,
		"noEmit": false,
		// "baseUrl": ".",
		"outDir": "./dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"strict": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"declaration": true
	},

	"watchOptions": {
		"watchFile": "priorityPollingInterval",
		"excludeDirectories": ["**/node_modules/"]
	},
	"exclude": ["node_modules"],
	"include": ["src-editor", "src-types"],
	"compileOnSave": false
}
